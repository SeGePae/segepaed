 author = {Kliem, S{\"o}ren and Baier, Dirk and Bergmann, Marie Christine},
 year = {2018},
 title = {Pr{\"a}valenz grenz{\"u}berschreitender Verhaltensweisen in romantischen Beziehungen unter Jugendlichen (Teen-Dating-Violence): Ergebnisse einer niedersachsenweit repr{\"a}sentativen Befragung},

@article{2601,
 abstract = {Die Zug{\"a}nge insbesondere zu externen Hilfen und Unterst{\"u}tzung sind f{\"u}r Kinder und Jugendliche schwierig gestaltet. Sie befinden sich bei Problemen in Loyalit{\"a}tskonflikten. Meist ist es so, dass sich die Kinder

und Jugendlichen zuerst an Betreuungspersonen in der Einrichtung wenden sollen. Erst danach bzw. wenn das Problem f{\"u}r sie nicht gel{\"o}st ist, k{\"o}nnen/d{\"u}rfen/sollen sie sich nach {\frqq}au{\ss}en{\flqq} bzw. an Externe

wenden. Wichtig sind externe Ansprechpersonen, die unabh{\"a}ngig sind und nicht in Verbindung und (unbedingtem) Kontakt zur Einrichtung stehen. Rechtliche Aufkl{\"a}rung sowohl f{\"u}r Kinder und Jugendliche, als auch f{\"u}r Betreuungspersonen ist notwendig. So erst wird f{\"u}r alle deutlich, was Be·treuungspersonen sowie Kinder und Jugendliche (nicht) d{\"u}rfen und worauf ein Anspruch besteht. Besonders relevant erscheint hier die

rechtliche Aufkl{\"a}rung im Bereich der Sexualit{\"a}t und Sexualp{\"a}dagogik. Die Unsicherheiten (auf beiden Seiten) beeintr{\"a}chtigen die Beziehungen und die angestrebte {\frqq}Normalit{\"a}t des Aufwachsens{\flqq} f{\"u}r Kinder und Jugendliche. Es besteht eine Notwendigkeit in den Schutzkonzepten Sexualit{\"a}t zu thematisieren, anzuerkennen und sie als Pers{\"o}nlichkeitsrecht zu st{\"a}rken. Dazu z{\"a}hlen Erfahrungen, Gestaltungsm{\"o}glichkeiten und Probleme von Paarbeziehungen, Sexualit{\"a}t, sexuelle Orientierungen und weitere Aspekte. Darauf aufbauend ist es relevant, sexualisierte Gewalt, Grenz{\"u}berschreitungen, strukturelle und organi sationale Gegebenheiten und {\"U}bergriffe zu besprechen.



In der Thematisierung von Schutzkonzepten vor sexualisierter Gewalt wurde deutlich, dass diese nicht durchg{\"a}ngig in Verbindung mit den allt{\"a}glichen p{\"a}dagogisch en Reflexionen der Betreuungspersonen stehen. Die Themen sind f{\"u}r Betreuungspersonen sowie f{\"u}r die Kinder und jugendlichen mitunter gar nicht pr{\"a}sent. Teilweise bestehen nur Papiere wie ein Qualit{\"a}tshandbuch und eine Telefonliste. Dagegen sind die Themen Beteiligung, Partizipation und Beschwerde wichtige Arbeitsbereiche f{\"u}r Betreuungspersonen, da davon momentan (auch) die Betriebserlaubnis abh{\"a}ngt. In diesen Bereichen lassen sich gefundene Ma{\ss}nahmen einordnen.

Insgesamt wurde deutlich, dass die allt{\"a}gliche Umsetzung von Konzepten in der Qualit{\"a}tsentwicklung st{\"a}rker betrachtet und erforscht werden muss.},
 author = {Domann, Sophie and Rusack, Tanja},
 year = {2015},
 title = {Schutzkonzepte in der Kinder und Jugendhilfe: Die Sicht der Jugendlichen und Betreuungspersonen},
 keywords = {Heim // group home;Kinder- und Jugendhilfe // child welfare system;Schutzkonzept // protection concept;Sexuelle Gewalt // sexual violence},
 pages = {91--95},
 volume = {60},
 number = {3},
 journal = {Kinder- und Jugendschutz in Wissenschaft und Praxis (KJug)}
}


@article{2602,
 abstract = {Die befragten Jugendlichen zeigten ein deutliches Vertrauen in die Institution und das Setting der offenen Jugendarbeit und (nur) zu den hauptamtlichen erwachsenen Mitarbeitenden, mit denen sie h{\"a}ufigen Umgang hatten (s. dazu Zeller 2012). Das Settingvertrauen sowie das spezifische und pers{\"o}nliche Vertrauen erm{\"o}glicht den Jugendlichen, sich zu {\"o}ffnen, {\"u}ber Probleme, W{\"u}nsche und Fragen mit den Mitarbeitendenungezwungen ins Gespr{\"a}ch zu kommen.  Es konnte gezeigt werden, dass die Beziehung zu den hauptamtlichen bzw. erwachsenen permanent anwesenden Mitarbeitenden eine Rolle f{\"u}r das Vertrauensverh{\"a}ltnis und (die Optionen) {\"u}ber Probleme zu sprechen spielt. Die Jugendlichen machten deutlich, dass sie zwischen diesen Formen des Vertrauens nicht direkt unlerscheiden, sondern diese Mischung gewinnbringend und f{\"o}rderlich bewerten und


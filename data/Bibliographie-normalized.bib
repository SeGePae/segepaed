}


@article{5040,
 abstract = {Die Arbeit untersucht das Vorkommen sexueller Schwierigkeiten in studentischen Beziehungen, den Einfluss der Beziehungsdauer auf sexuelle Aktivität und sexuelle Probleme, den Leidensdruck, der mit sexuellen Schwierigkeiten einhergeht, sowie das subjektive Erleben und den Umgang mit ausgewählten sexuellen Schwierigkeiten (Erektionsschwierigkeiten, Orgasmusschwierigkeiten) in studentischen Partnerschaften. Dazu werden quantitative und qualitative Daten aus zwei Studien analysiert: In einer deutschlandweiten repräsentativen Fragebogenerhebung wurden 2082 Studierende an 15 Universitäten befragt. Darüber hinaus wurden qualitative leitfadengestützte Interviews mit 135 Studierenden (85 Frauen und 50 Männer) geführt. Die Daten zeigen, dass sexuelle Schwierigkeiten weit verbreitet sind: Frauen klagen häufiger über zu wenig Lust (46 %), Orgasmusschwierigkeiten (45 %) und Erregungsprobleme (39 %) sowie über Schmerzen beim Sex (40 %). Männer klagen über zu schnelle Orgasmen (49 %) - und darüber, dass ihre Partnerin zu selten Lust auf Sex hat. Die meisten gehen mit diesen Schwierigkeiten offenbar gelassen um. Allerdings sagen 14 % der fest liierten Frauen, dass sie unter ihren sexuellen Problemen in der Partnerschaft "stark" oder "sehr stark" leiden, bei den Männern sind es 6 %.},
 author = {Dekker, Arne and Matthiesen, Silja},
 year = {2015},
 title = {Sexuelle Schwierigkeiten in heterosexuellen studentischen Beziehungen},
 keywords = {Forschungsergebnisse // research results;Quantitative Forschung // quantitative research;Sexualität // sexuality;Sexualverhalten // sexual behaviour;Studierende // students;Survey // survey},
 pages = {232--251},

 keywords = {Disclosure // disclosure;Männer // men;Sexualisierte Gewalt // sexual violence},
 pages = {71--85},
 volume = {17},
 issn = {2070-3481},
 journal = {soziales_kapital}
}


@article{2623,
 abstract = {Entsprechend vielfältig kann gelungene Aufdeckung durch das nähere und weitere Umfeld sowie gesellschaftliche Diskurse unterstützt werden. Jugendarbeit als Teil dieses Umfeldes kann Hindernisse im Aufdeckungsprozess verringern und hilfreiche Faktoren fördern in dem sie allgemeine Methoden der Jugendarbeit anwendet, wozu die Stärkung der Jugendlichen aber auch die Schaffung eines diskriminierungs- und gewaltfreien Raumes gehört. Eine emanzipatorische, gendersensible Jugend- und Jungenarbeit unterstützt diesen Prozess (vgl. auch Dissense. V. et al. 2012). In diesem Rahmen ist die Aneignung und Weitergabe von Wissen zu sexualisierter Gewalt auch gegen männliche Kinder und Jugendliche notwendig sowie die Förderung einer Kultur der Sorge hilfreich. Opfererfahrungen und traditionelle Männlichkeitskonzepte schließen sich gegenseitig aus. Jugendarbeit bewegt sich in der Arbeit mit Betroffenen permanent in dem Widerspruch, einerseits die betroffenen Jugendlichen in ihrer bedrohten Männlichkeit stärken zu müssen und gleichzeitig den Jugendlichen ihr Betroffensein zu verdeutlichen. Das Angebot und die Aneignung von Männlichkeitsentwürfen, in welche Aspekte der Betreuung und Fürsorge eingeschrieben sind (vgl. Budde 2014), könnten für die betroffenen Jugendlichen hilfreich sein, um besser mit diesem Widerspruch umgehen zu können.},
 author = {Scambor, Elli and Wittenzellner, Ulla and Puchert, Ralf and Rieske, Thomas Viola and Könnecke, Bernard},
 year = {2016},
 title = {"... dass die Leute da auch genauer hingucken". Wie kann die Aufdeckung von sexualisierter Gewalt bei männlichen Kindern und Jugendlichen in der Jugendarbeit gefördert werden?},
 keywords = {Betroffene sexualisierter Gewalt // sexual assault survivors;Disclosure // disclosure;Geschlecht // gender;Jugendarbeit // youth work;Jungen // boys;Sexualisierte Gewalt // sexual violence},
 pages = {60--67},
